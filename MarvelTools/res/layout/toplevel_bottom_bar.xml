<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_main_tab_bottom"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bottom_bar" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <LinearLayout
            android:id="@+id/id_tab_bottom_community"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imagebutton_tab_bottom_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/tab_community_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/community"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_bottom_marvel_tools"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imagebutton_tab_bottom_marvel_tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/tab_marveltools_pressed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/marvel_tools"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_bottom_discovery"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imagebutton_tab_bottom_discovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/tab_discovery_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/discovery"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_bottom_about_me"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imagebutton_tab_bottom_about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/tab_about_me_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/about_me"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>